<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crown Clothing</title>
    <link rel="stylesheet" href="/shop/css/style.css" />
  </head>
  <body>
    <div class="header">
      <a href="/" class="logo-container">
        <img src="/shop/assets/crown.svg" />
      </a>
      <div class="options">
        <a href="/shop/overview.html" class="option">Shop</a>
        <a href="/shop" class="option">Contact</a>
        <a href="/signin" class="option">Sign In</a>
        <div class="cart-icon" onclick="cartToggle()">
          <img
            class="shopping-icon"
            src="/shop/assets/shopping-bag.svg"
            alt=""
          />
        </div>
        <div class="cart-dropdown">
          <div class="cart-items">
            <div class="cart-item">
              <img src="https://i.ibb.co/QdJwgmp/brown-cowboy.png" alt="item" />
              <div class="item-details">
                <span class="name">Brown Cowboy</span>
                <span class="price">4 * $35</span>
              </div>
            </div>
            <div class="cart-item">
              <img
                src="https://i.ibb.co/mJS6vz0/blue-jean-jacket.png"
                alt="item"
              />
              <div class="item-details">
                <span class="name">Blue Jean Jacket</span>
                <span class="price">1 * $90</span>
              </div>
            </div>
            <button class="custom-button">GO TO CHECKOUT</button>
          </div>
        </div>
      </div>
    </div>

    <div class="shop-page">
      <div class="collection-page">
        <h1 class="title"><%= title %></h1>
        <h2 style="margin-bottom: 0.5rem; text-align: center">
          <%= name %>, <%= id %>
        </h2>
        <div class="items">
          <% data.forEach((item)=>{ %>
          <div class="collection-item">
            <img class="image" src="<%= item.local_img %>" />
            <div class="collection-footer">
              <span class="name"><%= item.title %></span>
              <span class="price"><%= item.price %></span>
            </div>
            <button class="custom-button">Add to Cart</button>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script>
      function cartToggle() {
        p = document.querySelector('.cart-dropdown');
        p.classList.toggle('show');
      }
    </script>
  </body>
</html>
